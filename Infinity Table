#include <bits/stdc++.h>
using namespace std;
typedef long long int ll;


int main()
{
ios::sync_with_stdio(0);
            cin.tie(0);
            cout.tie(0);
            cout<<fixed;
            cout<<setprecision(10);
int t;
cin>>t;            
while(t--){
int k;
	cin >> k;

	int a = 1;
	int x = 1;
	int i = 1;

	while (k >= x + a)
		{
			x += a;
			a += 2;
			i += 1;
		}

		int m = k - x + 1;
		if (m <= i)
			cout << m << ' ' << i << '\n';
		else
			cout << i << ' ' << (i - (m - i)) << '\n';
	

}
return 0;
}

