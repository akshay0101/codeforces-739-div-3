#include <bits/stdc++.h>
using namespace std;
typedef long long int ll;
 
int main()
{
ios::sync_with_stdio(0);
            cin.tie(0);
            cout.tie(0);
            cout<<fixed;
            cout<<setprecision(10);
int t;
cin>>t;            
while(t--){
int k;
cin>>k;
int i=1,n=0;
while(i<=k){
    ++n;
    if(n%3!=0 && n%10!=3)i++;
}
cout<<n<<endl;
}
return 0;
}
